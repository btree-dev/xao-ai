{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "ai/src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "ai/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}